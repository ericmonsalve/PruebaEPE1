<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.eric.promedio.MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EPR1"
            android:layout_marginLeft="20dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_eva1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EVA1"
            android:layout_marginLeft="20dp"
            android:textSize="20sp" />
    </TableRow>

    <TableRow
        android:gravity="center_horizontal">
        <EditText
            android:id="@+id/et_nota1"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:digits="0123456789"
            android:maxLength="2"/>

        <EditText
            android:id="@+id/et_eva1"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:digits="0123456789"
            android:maxLength="2"/>
    </TableRow>
    <TableRow
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_epe1"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:text="EPE1"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_eva2"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:text="EVA2"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"/>
    </TableRow>
    <TableRow
        android:gravity="center_horizontal">
        <EditText
            android:id="@+id/et_nota2"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:digits="0123456789"
            android:maxLength="2"/>
        <EditText
            android:id="@+id/et_eva2"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:digits="0123456789"
            android:maxLength="2"/>
    </TableRow>
    <TableRow
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_epr2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EPR2"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_eva3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EVA3"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"/>
    </TableRow>
    <TableRow
        android:gravity="center_horizontal">
        <EditText
            android:id="@+id/et_nota3"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:digits="0123456789"
            android:maxLength="2"

        />
        <EditText
            android:id="@+id/et_eva3"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:digits="0123456789"
            android:maxLength="2"/>
    </TableRow>
    <TableRow
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_epe2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EPE2"
            android:layout_marginLeft="20dp"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_eva4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EVA4"
            android:layout_marginLeft="20dp"
            android:textSize="20sp" />
    </TableRow>
    <TableRow
        android:gravity="center_horizontal">
        <EditText
            android:id="@+id/et_nota4"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:digits="0123456789"
            android:maxLength="2"/>
        <EditText
            android:id="@+id/et_eva4"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:digits="0123456789"
            android:maxLength="2"/>
    </TableRow>
    <TableRow
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btn_calcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="calcular"
            android:text="Calcular" />
    </TableRow>
    <TableRow
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_prom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:text="Promedio Parcial: "
            />
        <TextView
            android:id="@+id/tv_resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            />
    </TableRow>
    <TableRow
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_examen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Examen: "
            android:layout_marginLeft="13dp"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/et_examen"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:digits="0123456789"
            android:maxLength="2"
            android:enabled="false"/>
    </TableRow>
    <TableRow
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btn_final"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="calcular_promfinal"
            android:text="Promedio Final "
            android:enabled="false"
            />
    </TableRow>
    <TableRow
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_prom_final"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:text="Promedio Final: "
            />
        <TextView
            android:id="@+id/tv_resultado_final"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            />
    </TableRow>
    <TableRow
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btn_datos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="enviar_datos"
            android:text="Acerca De "
            />
    </TableRow>

</TableLayout>
